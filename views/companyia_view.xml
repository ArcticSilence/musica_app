<?xml version="1.0"?>
<odoo>
    <record id="view_form_comp" model="ir.ui.view">
        <field name="name">Formulario Companyia</field>
        <field name="model">musica.companyia</field>
        <field name="arch" type="xml">
            <form string="Companyia">
                <header>
                </header>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="cod"/>
                            <field name="name"/>
                            <field name="dir"/>
                            <field name="fax"/>
                            <field name="tlfn"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="view_tree_book" model="ir.ui.view">
        <field name="name">Lista companyias</field>
        <field name="model">musica.companyia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cod"/>
                <field name="name"/>
                <field name="dir"/>
                <field name="fax"/>
                <field name="tlfn"/>
            </tree>
        </field>
    </record>

    <record id="view_search_comp" model="ir.ui.view">
        <field name="name">Filtros companyias</field>
        <field name="model">musica.companyia</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="filter_inactive"
                        string="Inactive"
                        domain="[('active','=',False)]"/>
                <filter name="filter_active"
                        string="Active"
                        domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>