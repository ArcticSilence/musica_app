<?xml version="1.0" ?>
<odoo>
    <record id="module_musica_category" model="ir.module.category">
        <field name="name">Musica</field>
    </record>

    <!-- Musica User Group -->
    <record id="musica_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Musica Manager Group -->
    <record id="musica_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('musica_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),
								  (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Musica User Artista -->
    <record id="musica_artista_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Musica Manager Artista -->
    <record id="musica_artista_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('musica_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),
								  (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Musica User Cancion -->
    <record id="musica_cancion_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Musica Manager Cancion -->
    <record id="musica_cancion_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_musica_category"/>
        <field name="implied_ids" eval="[(4, ref('musica_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),
								  (4, ref('base.user_admin'))]"/>
    </record>
</odoo>